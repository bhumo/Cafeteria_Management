<div>
<h1>Order History</h1>
<h4>SubTotal(<%=@totalItems%> ): <span class= "text-danger"> <%= @subTotal%></span> </h4>
<h5>Order Id: <%= @orderId%></h5>
<h5> Status : <%= @status%> </h5>
<h5>Date Ordered: <span><%= @created_at%></span> </h5>
</div>
<div>
<% if flash[:notice]%>
<p> <%= flash[:notice] %></p>
<% end%>
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Item Name </th>
      <th>Quantity</th>
      <th>Total Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items_list.each do |order| %>
      <tr>
        <td><%= order[:item_id] %></td>
        <td><%= order[:name] %></td>
        <td><%= order[:count] %></td>
        <td><%= order[:total]%> </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row justify-content-center">
  <%= link_to "Back" ,:back,class:"btn btn-outline-primary btn-lg"%>
</div>
