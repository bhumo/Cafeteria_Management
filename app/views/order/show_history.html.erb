<div>
<h1>Order History</h1>
</div>
<div>
<% if flash[:notice]%>
<p> <%= flash[:notice] %></p>
<% end%>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Total Items</th>
      <th>Total Price</th>
      <th>Date of Order</th>
      <th> Status</th>
      <% if session[:view]==2%>
      <th>Change Status</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items_list.each do |order| %>
      <tr>
        <td><%= order[:order_id] %></td>
        <td><%= order[:count] %></td>
        <td><%= order[:total] %></td>
        <td> <%= order[:created_at]%></td>
        <td> <%= order[:status]%> </td>
        <% if session[:view]==2%>
        <td><%= link_to 'Change Status',changeStatus_path(order_id: order[:order_id],status: "delivered"),method: :get,class: "btn btn-primary"%> </td>
        <td><%= link_to 'More info',moreinfo_path(order_id: order[:order_id]),method: :get,class: "btn btn-secondary"%></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
